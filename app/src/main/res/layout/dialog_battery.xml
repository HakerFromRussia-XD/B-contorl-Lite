<!--            app:layout_constraintStart_toStartOf="@+id/gl_andex_alert_dialog_layout_image_left1"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/alert_dialog_percent_battery_tv"-->
<!--            tools:ignore="RtlHardcoded,SmallSp" />-->

        <TextView
            android:id="@+id/alert_dialog_li_ion_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sf_pro_text_bold"
            android:gravity="center"
            android:text="@string/li_ion"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            app:layout_constraintEnd_toStartOf="@+id/gl_andex_alert_dialog_layout_image_right2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/gl_andex_alert_dialog_layout_image_left1"
            app:layout_constraintTop_toBottomOf="@+id/alert_dialog_battery_iv" />

        <ImageView
            android:id="@+id/alert_dialog_li_ion_iv"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/battery_for_dialog_100"
            app:layout_constraintEnd_toStartOf="@+id/gl_andex_alert_dialog_layout_image_left2"
            app:layout_constraintStart_toStartOf="@+id/gl_andex_alert_dialog_layout_image_left1"
            app:layout_constraintTop_toBottomOf="@+id/alert_dialog_li_ion_title_tv"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/alert_dialog_percent_li_ion_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_bold"
            android:gravity="right"
            android:text="@string/li_ion_percent"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/alert_dialog_li_ion_iv"
            app:layout_constraintEnd_toStartOf="@+id/gl_andex_alert_dialog_layout_image_right2"
            app:layout_constraintStart_toStartOf="@+id/gl_andex_alert_dialog_layout_image_right1"
            app:layout_constraintTop_toTopOf="@+id/alert_dialog_li_ion_iv"
            tools:ignore="RtlHardcoded" />

<!--        <TextView-->
<!--            android:id="@+id/alert_dialog_li_ion_message_tv"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/sf_pro_text_bold"-->
<!--            android:gravity="right"-->
<!--            android:text="@string/on_average_up_to_7_days"-->
<!--            android:textColor="#99000000"-->
<!--            android:textSize="10sp"-->
<!--            android:textStyle="bold"-->
